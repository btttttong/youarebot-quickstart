FROM python:3.11-slim

WORKDIR /app

# Install MLflow
RUN pip install mlflow[extras]==2.10.2

# Create directories for MLflow
RUN mkdir -p /mlruns /models

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
  CMD curl -f http://localhost:5000/health || exit 1

# Start MLflow server
CMD ["mlflow", "server", "--host", "0.0.0.0", "--port", "5000", "--backend-store-uri", "sqlite:///mlruns/mlflow.db", "--default-artifact-root", "file:///models"]